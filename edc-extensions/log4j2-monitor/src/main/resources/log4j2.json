{
  "Configuration": {
    "Appenders": {
      "Console": {
        "name": "CONSOLE",
        "PatternLayout": {
          "pattern": "%d [%t] %5p %c{1.} - %m%n"
        }
      }
    },
    "Loggers": {
      "Root": {
        "level": "OFF"
      },
      "Logger": {
        "name": "org.eclipse.edc.monitor.logger",
        "level": "DEBUG",
        "AppenderRef": {
          "ref": "CONSOLE"
        }
      }
    }
  }
}